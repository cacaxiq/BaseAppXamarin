<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BaseApp.View.Pages.Login"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Login:" />
            <Entry Text="{Binding UserLogin.UserID}" />
            <Label Text="Senha:" />
            <Entry Text="{Binding UserLogin.AccessKey}" />
            <Button Command="{Binding GerarTokenCommand}" Text="Acessar" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>